@using GeziLog.Models.Classes
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CommentList</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        @*<th>Güncelle</th>*@
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.ID</td>
        <td>@x.UserName</td>
        <td>@x.Mail</td>
        <td>@x.CommentArea</td>
        <td>@x.Blog.Title</td>
        <td><a href="/Admin/DeleteComment/@x.ID" class="btn btn-danger">Sil</a></td>
        @*<td><a href="/Admin/GetComment/@x.ID" class="btn btn-warning">Güncelle</a></td>*@
    </tr>
    }
</table>